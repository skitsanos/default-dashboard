{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "umi": [
        "src/.umi/exports"
      ]
    },
    "typeRoots": [
      "@types/"
    ],
    "lib": [
      "dom",
      "es2022"
    ],
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": true,
    "sourceMap": false,
    "allowJs": true,
    "resolveJsonModule": true,
    "noEmit": true
  },
  "exclude": [
    "dist",
    "functions",
    "node_modules/**/*"
  ]
}